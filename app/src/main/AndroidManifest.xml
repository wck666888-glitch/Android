<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- IR Emitter Permission -->
    <uses-permission android:name="android.permission.TRANSMIT_IR" />

    <!-- Network Permissions (for extended features) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Storage Permissions (for config import/export) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <!-- Declare IR hardware feature -->
    <uses-feature
        android:name="android.hardware.consumerir"
        android:required="false" />

    <application
        android:name=".IRRemoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IRRemote"
        tools:targetApi="34">

        <!-- Main Remote Control Activity -->
        <activity
            android:name=".ui.RemoteControlActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IRRemote">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Config Editor Activity -->
        <activity
            android:name=".ui.ConfigEditorActivity"
            android:exported="false"
            android:label="@string/config_editor_title"
            android:parentActivityName=".ui.RemoteControlActivity" />

        <!-- Config List Activity -->
        <activity
            android:name=".ui.ConfigListActivity"
            android:exported="false"
            android:label="@string/config_list_title"
            android:parentActivityName=".ui.RemoteControlActivity" />

    </application>

</manifest>
